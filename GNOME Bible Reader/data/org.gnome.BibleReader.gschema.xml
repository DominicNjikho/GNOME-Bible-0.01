<schemalist>
  <schema id="org.gnome.BibleReader" path="/org/gnome/BibleReader/">
    <key name="theme" type="s">
      <default>'light'</default>
      <summary>Application theme</summary>
    </key>
    <key name="font-family" type="s">
      <default>'Inter'</default>
      <summary>Font family</summary>
    </key>
    <key name="font-size" type="i">
      <default>16</default>
      <summary>Font size in points</summary>
    </key>
    <key name="display-mode" type="s">
      <default>'paragraph'</default>
      <summary>Display mode</summary>
    </key>
    <key name="highlight-color" type="s">
      <default>'#fef9c3'</default>
      <summary>Highlight color</summary>
    </key>
    <key name="last-book" type="s">
      <default>'Gen'</default>
      <summary>Last opened book</summary>
    </key>
    <key name="last-chapter" type="i">
      <default>1</default>
      <summary>Last opened chapter</summary>
    </key>
    <key name="last-translation" type="s">
      <default>'kjv'</default>
      <summary>Last used translation</summary>
    </key>
  </schema>
</schemalist>